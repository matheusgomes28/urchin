package views

import (
    "fmt"
    . "github.com/matheusgomes28/urchin/common"
)

templ MakeImagePage(image Image) {
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8" />
        <title>Menu and Contact Form</title>
        <!-- Minified version -->
        <link rel="stylesheet" href="/static/simple.min.css" />
        <script src="/static/htmx.min.js"></script>
        <script src="/static/client-side-templates.js"></script>
    </head>

    <body>
        @MakeNavBar()
        <main>
            <article>
            <h3>{ image.Name }</h3>
            <img src={fmt.Sprintf("/data/images/%s", image.Uuid)} alt={image.AltText} />
            <p>{ image.AltText }</p>
            </article>
        </main>
        <a href={templ.URL("/images")}>Back</a>
    
        @MakeFooter()
    </body>

    </html>
}
