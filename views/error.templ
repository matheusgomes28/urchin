package views

import "github.com/matheusgomes28/urchin/common"


templ MakeErrorPage(error_str string, links []common.Link) {
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8" />
        <title>Error!</title>
        <!-- Minified version -->
        <link rel="stylesheet" href="/static/simple.min.css" />
        <script src="/static/htmx.min.js"></script>
        <script src="/static/client-side-templates.js"></script>
    </head>

    <body>
        @MakeNavBar(links)
        <main>
            <article>
                <h2>Error Occurred!</h2>
                <p>{ error_str }</p>
            </article>
        </main>
    
        @MakeFooter()
    </body>

    </html>
}
