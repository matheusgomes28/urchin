    "version": "0.2.0",
    "configurations": [
        {
            "name": "CmsApp",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/urchin",
            "cwd": "${workspaceFolder}",
            "args": [
                "--config",
                "${workspaceFolder}/urchin_config.toml"
            ]
        },
        {
            "name": "AdminApp",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/urchin-admin",
            "cwd": "${workspaceFolder}",
            "args": [
                "--config",
                "${workspaceFolder}/urchin_config.toml"
            ]
        },
    ]
}